<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e9ebee; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jjla2425.da.practica.MenuController">

   <!-- Columna Izquierda (para iconos) -->
   <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #9ca3af; -fx-padding: 10; -fx-background-radius: 10;">
      <ImageView fitHeight="50" fitWidth="50">
      </ImageView>
      <Button mnemonicParsing="false" onAction="#goToAddProductMenu" text="Button" />
      <ImageView fitHeight="50" fitWidth="50" onMouseClicked="#goToAddProductMenu">

      </ImageView>
      <Button mnemonicParsing="false" onAction="#goToAddOfferMenu" text="Button" />
      <ImageView fitHeight="50" fitWidth="50" onMouseClicked="#goToAddOfferMenu">
      </ImageView>
      <ImageView fitHeight="50" fitWidth="50">

      </ImageView>
   </VBox>

   <!-- Columna Derecha (Formulario) -->
   <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 10; -fx-pref-width: 300;">

      <!-- TÃ­tulo -->
      <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" text="Seller Data" />

      <!-- Formulario de Datos -->
      <GridPane hgap="10" vgap="10">
         <Label style="-fx-font-weight: bold;" text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <TextField fx:id="cifField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

         <Label style="-fx-font-weight: bold;" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

         <Label style="-fx-font-weight: bold;" text="Business name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <TextField fx:id="businessNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

         <Label style="-fx-font-weight: bold;" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

         <Label style="-fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
         <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

         <Label style="-fx-font-weight: bold;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
         <PasswordField fx:id="passwordFieldMenu" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>

      <Button alignment="CENTER_RIGHT" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 5 20;" text="Ok" />

   </VBox>
</HBox>
