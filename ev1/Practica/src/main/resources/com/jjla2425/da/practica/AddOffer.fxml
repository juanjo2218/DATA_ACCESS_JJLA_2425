<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jjla2425.da.practica.AddOfferController">
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #c3c4c6; -fx-padding: 10; -fx-background-radius: 10;">
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="@icon-user.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="@icon-add-product.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="@icon-dollar.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="@icon-logout.png" />
        </ImageView>
    </VBox>

    <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 10; -fx-pref-width: 300;">

        <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" text="Add offer" />

        <GridPane hgap="10" vgap="10">

            <Label style="-fx-font-weight: bold;" text="Product:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="productComboBox" promptText="Select Product" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-weight: bold;" text="From:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <DatePicker fx:id="fromDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-weight: bold;" text="To:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="toDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-weight: bold;" text="Discount:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="discountField" promptText="Enter discount" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>

        </GridPane>

        <Button alignment="CENTER_RIGHT" onAction="#validateAndAddOffer" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 5 20;" text="Add" />

    </VBox>
</HBox>
