<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #fdf5f0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jjla2425.da.practica.AddProductController">

    <!-- Barra Lateral (Iconos) -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #e6c7b4; -fx-padding: 20; -fx-background-radius: 15; -fx-pref-width: 160;">
        <ImageView fitHeight="50" fitWidth="50" style="-fx-opacity: 0.85;">
            <Image url="@icon-user.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50" style="-fx-opacity: 0.85;">
            <Image url="@icon-add-product.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50" style="-fx-opacity: 0.85;">
            <Image url="@icon-dollar.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50" style="-fx-opacity: 0.85;">
            <Image url="@icon-logout.png" />
        </ImageView>
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-background-radius: 15; -fx-pref-width: 420; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 12, 0, 2, 4);">

        <Label text="Add to Store" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #703e36;" />

        <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
            <Label text="Category:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #703e36;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="categoryComboBox" onAction="#viewProductsRemaning" promptText="Select Category" style="-fx-background-color: #f7ebe2; -fx-border-color: #d9bcb0; -fx-border-radius: 8; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Product:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #703e36;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="productComboBox" promptText="Select Product" style="-fx-background-color: #f7ebe2; -fx-border-color: #d9bcb0; -fx-border-radius: 8; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Stock:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #703e36;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <HBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Slider fx:id="stockSlider" blockIncrement="1" majorTickUnit="5" max="25" min="0" minorTickCount="4" showTickLabels="true" showTickMarks="true" style="-fx-pref-width: 150;" />
                <Label fx:id="stockLabel" text="Units" style="-fx-text-fill: #333333;" />
            </HBox>

            <Label text="Price:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #703e36;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="priceField" style="-fx-background-color: #f7ebe2; -fx-border-color: #d9bcb0; -fx-border-radius: 8; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
        </GridPane>

        <Button onAction="#AddProduct" text="Add" style="-fx-background-color: linear-gradient(to right, #ff7e5f, #f25c5c); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 16px; -fx-padding: 10 20; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 4, 0, 0, 2);" />
    </VBox>
</HBox>
